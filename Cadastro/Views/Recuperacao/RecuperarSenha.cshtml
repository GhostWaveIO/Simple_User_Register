

@using Cadastro.Models.ViewModel.Account.Cadastro;
@using Cadastro.Models.ViewModel.Application.Notifications.Alerts;
@model CadastroUsuarioVM
@{
  ViewData["Title"] = "Recuperar Senha";
  string msgResult = (string)ViewData["msgResult"];
}

@Html.Raw(AlertMessage.GetMessage(msgResult))

  <h4 class="text-center mt-3 mb-5">Recuperar Senha</h4>

  <div class="row mb-5">
    <div class="col-12 col-md-3"></div>
    <div class="col-12 col-md-6">

      <form asp-action="RecuperarSenha" method="post">
        @Html.HiddenFor(m => m.usuario.Dados[0].Campo.Campo_CadastroId)
        @Html.HiddenFor(m => m.usuario.Dados[0].Campo.ModeloCampo)
        @Html.HiddenFor(m => m.usuario.Dados[0].Campo.CampoGenerico)
        <div class="form-group">
          <label>Email de Acesso</label>
          <input class="form-control" type="email" asp-for="usuario.Dados[0].Email_Recuperacao" value="" />
          <span asp-validation-for="usuario.Dados[0].Email_Recuperacao" class="text-danger"></span>
        </div>

        <button class="btn btn-primary">Recuperar</button>
      </form>

    </div>
    <div class="col-12 col-md-3"></div>
  </div>

  