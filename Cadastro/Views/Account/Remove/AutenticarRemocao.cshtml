@using Cadastro.Models.ViewModel.Account.Remocao;
@using Cadastro.Models.ViewModel.Application.Notifications.Alerts;
@model AutenticarRemocaoVM

@{
    ViewData["Title"] = "Autenticar Remoção de Usuário";
}


<form asp-controller="Conta" asp-action="AutenticarRemocao" method="post">
    <div class="row mb-5 mt-4">
        <div class="col col-md-3"></div>
        <div class="col-12 col-md-6">

            @Html.Raw(AlertMessage.GetMessage(Model?.res))

            <h5 class="text-center mt-3 mb-5">Informe a Senha se Realmente Deseja Remover a Conta</h5>

            @*Senha*@
            <div class="form-group">
                @Html.LabelFor(m => m.Senha)
                @Html.PasswordFor(m => m.Senha, new{ @class="form-control" })
                @Html.ValidationMessageFor(m => m.Senha, "", new { @class="text-danger" })
            </div>

            <input type="submit" class="btn btn-success mt-4" />

        </div>
        <div class="col col-md-3"></div>
    </div>
</form>  

