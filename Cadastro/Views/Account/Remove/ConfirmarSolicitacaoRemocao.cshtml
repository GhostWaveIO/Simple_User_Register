@using Cadastro.Models.Entities.DB.Account.Remove
@using Cadastro.Models.ViewModel.Application.AccessContext

@model AuthToRemove
@{
    ViewData["Title"] = "Confirmar Solicitação";
    AcessoServiceVM acesso = (AcessoServiceVM)ViewData["acesso"];
}


<div class="row mb-5 mt-5">
    <div class="col col-md-3"></div>
    <div class="col-12 col-md-6">

        <h5 class="text-center mb-4">Ahhh você vai nos deixar?</h5>

        <p>
            <strong>@acesso._usuario.GetNome!</strong><br />
            Após a confirmação, e como solicitado, informamos que seus Dados Pessoais cadastrados em
            @acesso._usuario.DataCadastro.ToString("dd/MM/yyyy HH:mm"), serão permanentemente excluídos
            do <strong>SUR</strong> em até 05 dias úteis.
        </p>
        <p>
            Clique no botão abaixo e preencha a solicitação com seu email cadastrado.
        </p>

        <br/><br/>
        <a class="btn btn-success" asp-action="ConcluirSolicitarRemocao" asp-controller="Conta" asp-route-confirmed="@true" asp-route-request="@Model.Code">Confirmar Encerramento de Conta</a>
        <a class="btn btn-outline-secondary" asp-action="ConcluirSolicitarRemocao" asp-controller="Conta" asp-route-confirmed="@false" asp-route-request="@Model.Code">Desistir</a>


    </div>
    <div class="col col-md-3"></div>
</div>