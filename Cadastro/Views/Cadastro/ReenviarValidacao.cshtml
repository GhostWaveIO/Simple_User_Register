@using Cadastro.Models.ViewModel.Application.Notifications.Alerts
@using Cadastro.Models.Services.Application.Network.Email;
@model EmailService
@{
    ViewData["Title"] = "Reenviar Validação de E-mail";
}

<!-- Alert Message -->
@Html.Raw(AlertMessage.GetMessage(@Model.msgResult))

<h3 class="text-center mt-3 mb-5">Reenviar Validação de E-mail</h3>

<div class="row">
    <div class="col-12 col-md-3"></div>
    <div class="col-12 col-md-6">
        <form asp-action="ReenviarValidacao" method="post">

            <div class="form-group">
                <label>E-mail</label>
                <input class="form-control" asp-for="Email" type="email" value="" />
            </div>

            <button class="btn btn-primary" type="submit">Reenviar Confirmação</button>

        </form>
    </div>
    <div class="col-12 col-md-3"></div>
</div>

